<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="routeDetails"
            type="com.nyasai.traintimer.database.RouteDetails" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_frame_style" >

        <!-- 時刻 -->
        <TextView
            android:id="@+id/departure_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintEnd_toEndOf="@id/train_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:departureTime="@{routeDetails}" />
        <!-- 種別 -->
        <TextView
            android:id="@+id/train_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintEnd_toEndOf="@id/destination_name"
            app:layout_constraintStart_toStartOf="@id/departure_time"
            app:layout_constraintTop_toTopOf="parent"
            app:trainType="@{routeDetails}" />
        <!-- 方面 -->
        <TextView
            android:id="@+id/destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/train_type"
            app:layout_constraintTop_toTopOf="parent"
            app:destination="@{routeDetails}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>